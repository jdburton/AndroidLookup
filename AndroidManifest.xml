<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jburto2.androidlookup"
    android:versionCode="1"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/tiger_paw"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jburto2.androidlookup.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jburto2.androidlookup.DisplayInfoActivity"
            android:label="@string/title_activity_about_message"
            android:parentActivityName="com.jburto2.androidlookup.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jburto2.androidlookup.MainActivity" />
        </activity>
        <activity
            android:name="com.jburto2.androidlookup.DisplayLookupActivity"
            android:label="@string/title_activity_lookup_message"
            android:parentActivityName="com.jburto2.androidlookup.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jburto2.androidlookup.MainActivity" />
        </activity>
                <activity
            android:name="com.jburto2.androidlookup.DisplayWhoisActivity"
            android:label="@string/title_activity_whois_message"
            android:parentActivityName="com.jburto2.androidlookup.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jburto2.androidlookup.MainActivity" />
        </activity>
    </application>

</manifest>
